# SmartMedGuide Backend Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Database
DATABASE_PATH=database/medicine_db.sqlite

# Model Configuration
MODEL_PATH=model/converted_model.keras
IMAGE_SIZE=224

# API Keys
# OpenRouter API Key for AI Chatbot (Get from: https://openrouter.ai/keys)
OPENROUTER_API_KEY="your_google_api_key_here"
# Optional - for future integrations
# GOOGLE_API_KEY=your_google_api_key_here

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp

# Audio Configuration
AUDIO_DIR=static/audio
MAX_AUDIO_FILES=50

# CORS Configuration
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO